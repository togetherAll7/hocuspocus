{
  "private": true,
  "workspaces": [
    "demo",
    "docs",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "start": "yarn start:demo & yarn start:docs",
    "start:demo": "yarn --cwd ./demo start:development",
    "start:docs": "yarn --cwd ./docs start",
    "build:packages": "yarn clean:packages && lerna exec --ignore @hocuspocus/docs --ignore @hocuspocus/demo -- microbundle --raw --compress --target node",
    "build:docs": "yarn --cwd ./docs build",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern ./",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern ./",
    "test": "mocha --exit",
    "release": "yarn lint && lerna publish",
    "reset": "yarn clean:packages && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./yarn.lock && yarn install",
    "clean:packages": "rm -rf ./packages/*/dist"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^3.18.0",
    "@lerna/project": "^3.21.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "lerna": "^3.22.1",
    "microbundle": "^0.12.4",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3"
  }
}
