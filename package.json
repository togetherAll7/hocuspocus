{
  "private": true,
  "workspaces": [
    "demos",
    "docs",
    "packages/*"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not IE <= 11",
    "not IE_Mob <= 11"
  ],
  "type": "module",
  "scripts": {
    "build:docs": "yarn --cwd ./docs build",
    "build:packages": "yarn clean:packages && rollup -c && yarn --cwd ./packages/monitor build",
    "clean:packages": "rm -rf ./packages/*/dist",
    "demo:create-document": "concurrently --kill-others \"yarn --cwd ./demos client\" \"yarn --cwd ./demos watch src/create-document.ts\"",
    "demo:express": "concurrently --kill-others \"yarn --cwd ./demos client\" \"yarn --cwd ./demos watch src/express.ts\"",
    "demo:monitor": "concurrently --kill-others \"yarn --cwd ./demos client\" \"yarn --cwd ./demos watch src/monitor.ts\"",
    "demo:minimal": "concurrently --kill-others \"yarn --cwd ./demos client\" \"yarn --cwd ./demos watch src/minimal.ts\"",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern ./",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern ./",
    "release": "yarn lint && yarn build:packages && lerna publish",
    "reset": "yarn clean:packages && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./yarn.lock && yarn install",
    "start": "concurrently --kill-others \"yarn start:demo\" \"yarn start:docs\"",
    "start:docs": "yarn --cwd ./docs start",
    "test": "node --loader ts-node/esm --experimental-specifier-resolution=node node_modules/mocha/lib/cli/cli 'tests/**/*.js' --exit"
  },
  "devDependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.4",
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^3.18.0",
    "@lerna/project": "^3.21.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chai": "^4.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-vue": "^7.6.0",
    "lerna": "^3.22.1",
    "minimist": "^1.2.5",
    "mocha": "^8.3.0",
    "node-fetch": "^2.6.1",
    "rollup": "^2.39.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
