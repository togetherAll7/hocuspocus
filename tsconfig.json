{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": false,
    "checkJs": false,
    "paths": {
      "@hocuspocus/*": ["packages/*/dist", "packages/*/src"]
    },
    "lib": [
      "esnext",
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
